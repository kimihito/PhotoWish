<div class="modal-body">
  <img src="<%=@post.imgurl %>" />
  <p><b>コメント</b></p>
  <% comment = Post.first(:status_id => @post.status_id) %>
  <%comment.comments.each do |comment| %>
    <td><%=comment.comments %><br /></td>
  <%end%>
  <input type="textarea"col="40" row="10" name="comment">
  <input type="submit" value="Comment" />
</div>
